
<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@_name</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            @if (_image != null)
            {
                <MudImage Src="@_image" Fluid="true" Width="50" />
            }
            @if(_icon != null)
            {
                <MudIcon Icon="@_icon" Size="Size.Medium" />
            }
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
        <MudText>@Article.Description</MudText>
        @foreach(var tag in _tags)
        {
            <MudChip Label=true Size="Size.Small" Class="mx-0 mr-2" Variant="Variant.Text">@tag</MudChip>
        }
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary">Read More</MudButton>
    </MudCardActions>
</MudCard>

@code
{
    [Parameter]
    public Article Article{ get; set; } = default!;

    private string? _name;
    private string? _image;
    private string? _icon;
    private IEnumerable<string> _tags = default!;

    protected override void OnInitialized()
    {
        _name = Article.Name;
        _tags = Article.Tags;

        if(Article is IArticleImage asArticleImage)
            _image = asArticleImage.Image;

        if(Article is IArticleIcon asArticleIcon)
            _icon = asArticleIcon.Icon;

    }
}