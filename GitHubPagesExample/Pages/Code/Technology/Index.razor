@page "/code/technology"

<PageTitle>Technology</PageTitle>

<ArticleBoard Articles="@_technologyArticles" />

@code{
    [Inject]
    private IArticleHelper _articleHelper { get; set; } = default!;

    private IEnumerable<TechnologyArticle> _technologyArticles = Enumerable.Empty<TechnologyArticle>();

    protected override void OnInitialized()
    {
        _technologyArticles = _articleHelper.GetArticles<TechnologyArticle>();
    }

}
