@page "/code/technology"

<PageTitle>Technology</PageTitle>

<MudGrid xs="12" sm="6">
    @foreach (var techArticle in _technologyArticles)
    {
        <MudItem xs="12" sm="6" md="4">
            <TechnologyInfo Name="@techArticle.Name" Image="@techArticle.Image" Icon="@techArticle.Icon"  />
        </MudItem>
    }
</MudGrid>

@code{
    [Inject]
    private IArticleHelper? _articleHelper { get; set; } = default!;

    private IEnumerable<TechnologyArticle> _technologyArticles = Enumerable.Empty<TechnologyArticle>();

    protected override void OnInitialized()
    {
        _technologyArticles = _articleHelper.GetTechnologyArticles();
    }

}
