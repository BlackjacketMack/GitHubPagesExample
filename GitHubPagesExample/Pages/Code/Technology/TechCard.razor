
<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@_name</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            @if (_image != null)
            {
                <MudImage Src="@_image" Fluid="true" Width="50" />
            }
            @if(_icon != null)
            {
                <MudIcon Icon="@_icon" Size="Size.Medium" />
            }
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
        <MudText>This day everything happend.</MudText>
        <MudText Typo="Typo.body2">The quick, brown fox jumps over a lazy dog.</MudText>
        @foreach(var tag in _tags)
        {
            <MudChip Label=true Size="Size.Small" Class="mx-0 mr-2" Variant="Variant.Text">@tag</MudChip>
        }
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary">Read More</MudButton>
    </MudCardActions>
</MudCard>

@code
{
    [Parameter]
    public TechnologyArticle Article{ get; set; } = default!;

    private string? _name;
    private string? _image;
    private string? _icon;
    private IEnumerable<string> _tags = default!;

    protected override void OnInitialized()
    {
        _name = Article.Name;
        _image = Article.Image;
        _icon = Article.Icon;
        _tags = Article.Tags;

        if (_image == null && _icon == null)
            _icon = Icons.Custom.Brands.GitHub;
    }
}